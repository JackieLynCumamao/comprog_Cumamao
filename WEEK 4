def find_largest(a, b, c):
    if a > b and a > c:
        return "A", a
    elif b > a and b > c:
        return "B", b
    else:
        return "C",c
        
num1 = float(input("Enter your first number: "))
num2 = float(input("\nEnter your second number: "))
num3 = float(input("\nEnter your third number: "))

letter, largest = find_largest(num1, num2, num3)
print(f"\nLetter {letter} is the largest number with a value of {largest}")